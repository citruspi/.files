[user]
	email = me@mihirsingh.com
	name = Mihir Singh

[color]
    ui = auto
    interactive = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = magenta
    untracked = bold yellow
    ignored = yellow
    
[core]
    editor = vim
    autocrlf = input
    safecrlf = warn
    excludesfile = ~/.gitignore
    quotepath = false

[diff]
    tool = vimdiff

[merge]
    log = true
    tool = vimdiff

[alias]
    stat = status --ignored
    branches = branch -a
    remotes = remote -v
    tags = tag -l
    today = "log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative"
    ahead = "log @{u}...HEAD --graph --decorate --left-right --boundary --pretty=format:'%Cred%h%Creset %d %s %Cgreen(%cr)%Creset %Cblue[%an]%Creset' --abbrev-commit --date=relative"
    history = "log --graph --pretty=format:'%Cred%h%Creset %d %s %Cgreen(%cr)%Creset %Cblue[%an]%Creset' --abbrev-commit --date=relative"
