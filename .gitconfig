[user]
	email = me@mihirsingh.com
	name = Mihir Singh

[color]
    ui = auto
    interactive = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = magenta
    untracked = bold yellow

[core]
    editor = vim
    autocrlf = input
    safecrlf = warn
    excludesfile = ~/.gitignore
    quotepath = false

[diff]
    tool = vimdiff

[merge]
    log = true
    tool = vimdiff
